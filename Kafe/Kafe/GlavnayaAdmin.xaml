<Page x:Class="Kafe.GlavnayaAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kafe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GlavnayaAdmin">

    <Grid Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="200"/>
    </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="Aqua">
            <Image Source="docs\logo.png" Margin="10,5,5,5"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Button x:Name="zakaza" Background="AliceBlue" Content="Просмотр закзов" Width="150" Height="30" FontSize="17" Margin="5,75,5,5"></Button>
            <Button x:Name="sotr" Background="AliceBlue" Content="Сотрудники" Width="150" Height="30" FontSize="17" Margin="5,5,5,5"></Button>
            <Button x:Name="smens" Background="AliceBlue" Content="Смены" Width="150" Height="30" FontSize="17" Margin="5,5,5,5"></Button>
        </StackPanel>
    </Grid>
</Page>
