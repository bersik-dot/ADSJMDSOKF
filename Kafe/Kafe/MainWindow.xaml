<Window x:Class="Kafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kafe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Beige">
        <StackPanel Grid.Row="0" VerticalAlignment="Center" Orientation="Vertical">        
        <TextBlock FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,5,5,5">Авторизация</TextBlock>
            <TextBlock FontSize="13" HorizontalAlignment="Center" Margin="0,10,160,5">Логин</TextBlock> 
            <TextBox Width="200" Height="35" FontSize="17" Padding="4,4,4,4" ></TextBox>
            <TextBlock FontSize="13" HorizontalAlignment="Center" Margin="0,10,155,5">Пароль</TextBlock>
            <PasswordBox Width="200" Height="35" FontSize="17" Padding="4,4,4,4" ></PasswordBox>
            <Button x:Name="authorization" Background="AliceBlue" Click="authorization_Click" Content="Войти" Width="150" Height="30" FontSize="17" Margin="5,40,5,5" ></Button>
        </StackPanel>

    </Grid>
</Window>
